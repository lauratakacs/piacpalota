<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LogInFragment" >

    <Button
        android:id="@+id/logButton"
        android:layout_width="245dp"
        android:layout_height="150dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="24dp"
        android:text="Bejelentkezés"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logPasswordTextText" />

    <EditText
        android:id="@+id/logPasswordTextText"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="417dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="132dp"
        android:ems="10"
        android:hint="jelszó"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/logButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/felhaszEditTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginTop="318dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="92dp"
        android:ems="10"
        android:hint="Felhasználónév"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/logPasswordTextText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>